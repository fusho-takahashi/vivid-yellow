---
export interface Props {
	title: string;
	description?: string;
	ogImage?: string;
}

const { title, description = "日記と技術発信を行うための個人ブログ", ogImage } = Astro.props;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const ogImageURL = ogImage ? new URL(ogImage, Astro.site) : undefined;
import '../styles/global.css';
---

<html lang="ja">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link href="https://fonts.googleapis.com/css2?family=Bangers&display=swap" rel="stylesheet" />
		<title>{title}</title>
		<meta name="description" content={description} />

		<!-- OGP Tags -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content={canonicalURL} />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		{ogImageURL && <meta property="og:image" content={ogImageURL} />}

		<!-- Twitter Card Tags -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:site" content="@fusho_takahashi" />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content={description} />
		{ogImageURL && <meta name="twitter:image" content={ogImageURL} />}
	</head>
	<body>
		<header>
			<h1>
				<a href="/">VIVID YELLOW</a>
			</h1>
		</header>

		<main>
			<slot />
		</main>

		<footer>
			<p>&copy; 2024 VIVID YELLOW</p>
		</footer>
	</body>
</html>